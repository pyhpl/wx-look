<!-- search bar  -->
<view class="search-header" style='z-index: 10;'>
  <view class="left">
    <view class="search-icon">
      <i class="iconfont icon-search i"></i>
    </view>
    <view class="search-input">
      <input class="input" placeholder-class="placeholder-class" type="text" placeholder="搜索" />
    </view>
  </view>
  <view class="right">
    <view class="add-icon">
      <i class="iconfont icon-add-topic i"></i>
    </view>
  </view>
</view>
<!-- search bar close to swiper -->
<view class="search-header" style='background-color: #fff;{{searchHeaderCloseToSwiperZIndex}}'>
  <view class="left-swiper">
    <view class="search-icon-swiper">
      <i class="iconfont icon-search i-swiper"></i>
    </view>
    <view class="search-input-swiper">
      <input class="input-swiper" placeholder-class="placeholder-class-swiper" type="text" placeholder="搜索" />
    </view>
  </view>
  <view class="right-swiper">
    <view class="add-icon-swiper">
      <i class="iconfont icon-add-topic i-swiper"></i>
    </view>
  </view>
</view>
<!-- swiper  -->
<swiper id='swiper' indicator-color="rgba(255, 255, 255, .3)" indicator-active-color="#fff" class="swiper" autoplay circular indicator-dots="true" interval="5000" duration="1000">
  <block wx:for="{{hotTopicUrls}}" wx:for-index="index" wx:key="{{index}}">
    <swiper-item>
      <image src="{{item.url}}" mode="aspectFill" />
    </swiper-item>
  </block>
</swiper>

<!-- parent topic scroll  -->
<scroll-view scroll-x class='parent-topics' style='top: {{searchHeaderHeight}}px;'>
  <view wx:key='{{index}}' wx:for="{{parentTopics}}" data-index='{{index}}' catchtap='parentTopicTaped' class="parent-topic-container">
    <view class='parent-topic'>
      <view class="parent-topic-text {{index == onParentTopicIndex ? 'parent-topic-text-on' : ''}}">{{item}}</view>
      <view class="parent-topic-bottom-line {{index == onParentTopicIndex ? 'parent-topic-bottom-line-on' : ''}}"></view>
    </view>
  </view>
</scroll-view>

<!-- topics  -->
<block wx:for="{{topics[onParentTopicIndex]}}" wx:key='{{index}}' wx:for-item="topic">
  <view class='topics'>
    <view class='topic'>
      <view class='left'>
        <image class='topic-image' src='{{topic.pictureUrl}}'></image>
        <text class='topic-title'>{{topic.title}}</text>
      </view>
      <!-- <text class='badge'>99+</text>   -->
      <view class='focus-on'>关注</view>
    </view>
  </view>
</block>