.topic-choose-container {
  display: flex;
  flex-direction: row;  
  position: fixed;
  width: 100%;
  top: 100rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

/* parent topic scoll-view wxss  */

.parent-topics {
  height: 1106rpx;
  width: 190rpx;
}

.parent-topic {
  display: flex;
  background-color: #efefef;
  justify-content: center;
  align-items: center;
}

.parent-topic-on {
  background-color: #fff;
}

.parent-topic text {
  font-size: 28rpx;
  margin: 20rpx 0;
  color: #777d91;
  width: 100%;
  text-align: center;
  box-sizing: border-box;  
}

.parent-topic-text-on {
  border-left: 6rpx solid #3db4ff;
  border-right: 6rpx solid #fff;
}

/* child topic scoll-view wxss  */

.topics {
  display: flex;
  flex-direction: column;
  height: 1106rpx;
}

.topic {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 30rpx 0;
  margin-left: 40rpx;
  border-bottom:2rpx solid #eff0f7;
}

.topic image {
  width: 140rpx;
  height: 140rpx;
  margin-right: 20rpx;
  border-radius: 12rpx;
}

.text-explain {
  display: flex;
  flex-direction: column;
}

.title { 
  font-size: 30rpx;
}

.description {
  font-size: 26rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  width: 320rpx;
  line-height: 1.2;
  color: #7c7e85;
}

.to-detail {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 140rpx;
  width: 76rpx;
}

.to-detail-hover {
  background-color: #efefef;
}