.search-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 20rpx;
  background-color: #fff;
  position: fixed;
  top: 0;
  width: 100%;
}

.search-header .left,
.search-header .right {
  background-color: #efefef;
}

.search-header .left {  
  display: flex;
  align-items: center;
  width: 88%;
  height: 60rpx;
  border-radius: 30rpx;
  overflow: hidden;
}

.search-header .left .search-icon i {
  font-size: 15pt;
  margin-left: 20rpx;
  margin-right: 10rpx;
}

.search-header .left .search-input {
  font-size: 30rpx;
  width: 80%;
}

.search-header .right {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 40rpx;
  margin-left: 20rpx;
}

.search-header .right .cancel-icon {
  font-size: 12pt;
  color: grey;
}