<view class='h-line'></view>
<block wx:for="{{messages}}" wx:for-item="message" wx:key="{{message.uuid}}">
<!-- 系统消息 -->
<view class='message' bindlongtap='delete' hover-class='message-hover'>
  <view class='left'>
    <view class='type'>通过：</view>
    <view class='title'>活动XXXX</view>
  </view>
  <view class='right'>
    <i class='iconfont icon-dot dot' />     
  </view>
</view>
<view class='message' bindlongtap='delete' hover-class='message-hover'>
  <view class='left'>
    <view class='type'>{{}}</view>
    <view class='title del'>活动XXXX</view>
  </view>
  <view class='right'>
    <i wx:if="{{}}" class='iconfont icon-dot dot' />     
  </view>
</view>
<!-- 人员加入消息 -->
<view class='message' bindlongtap='delete' hover-class='message-hover'>
  <view class='left'>
    <image src='https://images-1252933270.cos.ap-guangzhou.myqcloud.com/zuozhu.jpg' class='avatar'></image>
    <view class='name'>随风</view>
    <view class='join'>加入</view>
    <view class='activity'>XXXX活动</view>
  </view>
  <view class='right'>
    <i class='iconfont icon-dot dot' />     
  </view>
</view>
</block>