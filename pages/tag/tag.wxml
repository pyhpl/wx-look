<view class='tags'>
  <view wx:for="{{tags}}" wx:for-item="tag" class='tag-container'>    
    <view class='tag'>{{tag}}</view>
    <i data-index="{{index}}" data-tag="{{tag}}" catchtap="tagDeleteConfirm" class="iconfont icon-delete tag-delete"></i>
  </view>
</view>

