  <view class="tag-add-bar__form">
    <view class="tag-add-bar__box">
      <i class="iconfont icon-tag"></i>
      <input bindconfirm="addTag" bindinput="onTagInput" type="text" class="tag-add-bar__input" placeholder="æ ‡ç­¾" />
    </view>
  </view>
  <view class="tag-add-bar__add-btn" catchtap='addTag'>
