.tags {
  display: flex;
  padding-left: 50rpx;
  padding-right: 40rpx;
  padding-top: 50rpx;
  padding-bottom: 34rpx;
  flex-wrap: wrap;
}

.tag-container {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #3db4ff;
  flex-shrink: 0;
  margin-right: 10rpx;
  margin-bottom: 16rpx;
}

.tag {
  font-size: 30rpx;
  margin: 10rpx;
  color: white;
}

.tag-delete {
  color: #efeff4;
  margin: 10rpx 10rpx 10rpx 0;
}