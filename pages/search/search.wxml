<view class="search-header">
  <view class="left">
    <view class="search-icon">
      <i class="iconfont icon-search"></i>
    </view>
    <view class="search-input">
      <input type="text" placeholder="搜索" />
    </view>
  </view>
  <view class="right">
    <view class="cancel-icon">
      <i class="iconfont icon-cancel"></i>
    </view>
  </view>
</view>

<view class="navbar-content">
  <view class="navbar-content__bd">
    <view class="weui-tab">
      <view class="weui-navbar">
        <block wx:for="{{tabs}}" wx:key="*this">
          <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
            <view class="weui-navbar__title">{{item}}</view>
          </view>
        </block>
        <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
      </view>
      <view class="weui-tab__panel">
        <scroll-view scroll-y bindscrolltolower="hello" class="weui-tab__content" hidden="{{activeIndex != 0}}">
          <activity-panel activity="{{activity}}"></activity-panel>
          <activity-panel activity="{{activity}}"></activity-panel>
          <activity-panel activity="{{activity}}"></activity-panel>
          <activity-panel activity="{{activity}}"></activity-panel>
          <activity-panel activity="{{activity}}"></activity-panel>
        </scroll-view>
        <scroll-view scroll-y bindscrolltolower="hello" class="weui-tab__content" hidden="{{activeIndex != 1}}">
          <topic-panel activity="{{activity}}"></topic-panel>
          <topic-panel activity="{{activity}}"></topic-panel>
          <topic-panel activity="{{activity}}"></topic-panel>
        </scroll-view>
        <scroll-view scroll-y bindscrolltolower="hello" class="weui-tab__content" hidden="{{activeIndex != 2}}">
          <school-panel activity="{{activity}}"></school-panel>
        </scroll-view>
      </view>
    </view>
  </view>
</view>