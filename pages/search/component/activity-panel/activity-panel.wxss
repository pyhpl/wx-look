@import "../../../../lib/style/font.wxss";

.content-gap {
  height: 20rpx;
  background-color: rgb(239, 240, 247); 
}

.activity {
  padding: 0 20rpx;
  background-color: white;
  /* width: 710rpx; */
}

.activity .header {
  display: flex;
  align-items: center;
  flex-direction: row;
  height: 120rpx;
  justify-content: space-between;
}

.activity .header .people-info {
  display: flex;
  align-items: center;
}

.activity .header .people-info image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}

.activity .header .name {
  margin-left: 20rpx;
  font-size: 30rpx;
  color: gray;
}

.activity .header .school {
  font-size: 30rpx;
  color: gray;
}

.activity .activity-title {
  font-size: 35rpx;
  text-align:left;
}

.activity .desc-picture {
  display: flex;
  margin-top: 30rpx;
  justify-content: space-between;
  flex-wrap: wrap;
}

/* 1 X 1  */

.activity .desc-picture .img_1X1 {
  flex-grow: 1;
  height: 480rpx;
  margin-bottom: 10rpx;
}

/* 1 X 2  */

.activity .desc-picture .img_1X2 {
  width: 350rpx;
  height: 350rpx;
  margin-bottom: 10rpx;
}

/* 1 X 3  */

.activity .desc-picture .img_1X3 {
  width: 230rpx;
  height: 230rpx;
  margin-bottom: 10rpx;
}

/* 1 X 3_5_8  */

.activity .desc-picture .img_1X3_5_8 {
  margin-right: 240rpx;
}

.activity .tag {
  display: flex;
  padding: 16rpx 0;
}

.activity .tag text {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  background: #3db4ff;
  color: #fff;
  padding: 8rpx 12rpx 4rpx 12rpx; 
  /* line-height: 2; */
  border-radius: 20rpx;
}

.activity .bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 10rpx;
  margin-bottom: 27rpx;
  color: gray;
}

.activity .bottom .left {
  display: flex;
  align-items: center;
}

.activity .bottom .left .join-people, .activity .bottom .left .like {
  display: flex;
  align-items: center;
}

.activity .bottom .left .join-people i {
  font-size: 15pt;
}

.activity .bottom .left .like i {
  font-size: 17pt;
}

.activity .bottom .left .join-people text, .activity .bottom .left .like text {
  font-size: 25rpx;
}

.activity .bottom .left .join-people text {
  margin-left: 10rpx;
}

.activity .bottom .left .like {
  margin-left: 40rpx;
}

.activity .bottom .left .like i {
  margin-left: 10rpx;
}

.activity .bottom .left .like text {
  margin-left: 3rpx;
}

.activity .date {
  display: flex;
  align-items: center;
}

.activity .date text {
  font-size: 25rpx;
}