@import "../../../../lib/ui/weui/index.wxss";

.page__hd__gap {
  height: 20rpx;
  background-color: rgb(239, 240, 247);
}

.page__hd {
  padding: 80rpx;
}

.page__bd {
  padding-bottom: 80rpx;
}

.page__bd_spacing {
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.page__ft {
  padding-bottom: 20rpx;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 40rpx;
  font-weight: 400;
}

.page__desc {
  margin-top: 10rpx;
  color: #888;
  text-align: left;
  font-size: 28rpx;
}

.panel-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.panel-header .people-info {
  display: flex;
  align-items: center;
}

.people-info image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}

.people-info text {
  margin-left: 26rpx;
}

.people-info .school {
  text-align: right;
  font-size: 30rpx;
  color: gray;
}

.panel-header .tag {
  display: flex;
  padding: 16rpx 0;
  font-size: 24rpx;
  line-height: 42rpx;
}

.panel-header .tag text {
  font-size: 22rpx;
  background: #3db4ff;
  color: #fff;
  padding: 0 12rpx;
  line-height: 2;
  border-radius: 20rpx;
}

.left {
  text-align: left;
}
