@import "../../../../lib/ui/weui/index.wxss";

.page__hd__gap {
  height: 20rpx;
  background-color: rgb(239, 240, 247);
}

.page__hd {
  padding: 40px;
}

.page__bd {
  padding-bottom: 40px;
}

.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}

.people-info {
  display: flex;
  align-items: center;
}

.people-info image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}

.people-info text {
  margin-left: 26rpx;
}

.people-info .school {
  text-align: right;
  font-size: 30rpx;
  color: gray;
}

.weui-media-box__desc {
  -webkit-line-clamp: 4;
}

.bottom {
  display: flex;
  align-items: center;
  margin-top: 0;
}

.tag {
  display: flex;
  padding: 16rpx 0;
  font-size: 26rpx;
  line-height: 42rpx;
}

.tag text {
  padding: 0 12rpx;
}

.left {
  text-align: left;
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 0;
  padding-bottom: 0;
  height: 106rpx;
}

.focus {
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid #3db4ff;
  width: 130rpx;
  border-radius: 30rpx;
  color: #3db4ff;
}
