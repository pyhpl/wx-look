<view class="page">
  <view class="page__hd__gap"></view>
  <view class="page__bd">
    <view class="weui-panel weui-panel_access">
      <view class="weui-panel__hd left header">
        <view class="weui-media-box__title left" style="color: black;">{{topic.name}}</view>
        <view data-topic-uuid='{{topic.uuid}}' catchtap='focus' class='focus {{topic.focused ? "focused" : ""}}'>{{topic.focused ? "已关注" : "关注"}}</view>
      </view>
      <view class="weui-panel__bd" catchtap='toTopic' hover-class="weui-cell_active">
        <view url="" class="weui-media-box weui-media-box_appmsg">
          <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
            <image mode='aspectFill' class="weui-media-box__thumb" src="{{topic.image}}" />
          </view>
          <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
            <view class="weui-media-box__desc left">{{topic.description}}</view>
          </view>
        </view>
      </view>
      <view class="weui-panel__ft" catchtap='toTopic' hover-class="weui-cell_active">
        <view class="weui-cell weui-cell_access weui-cell_link" style='padding: 10rpx 30rpx 0;'>
          <view class="weui-cell__bd left">
            <view class="weui-media-box__info bottom">
              <view class="weui-media-box__info__meta">
                <view class="tag">
                  <text>创建时间：{{topic.createDate}}</text>
                </view>
              </view>
            </view>
          </view>
          <view class="weui-cell__ft weui-cell__ft_in-access"></view>
        </view>
      </view>
    </view>
  </view>
</view>