.topic-activity {
  display: flex;
  flex-direction: column;
}

.activity-navbar {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #fff;
  position: -webkit-sticky;
  position: sticky;
  top: 0;
}

.nav {
  width: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0 10rpx 0;
}

.nav-text {
  font-size: 34rpx;
  padding-bottom:10rpx;
  box-sizing: border-box;
  border-top: 6rpx solid #fff;
  border-bottom: 6rpx solid #fff;
}

.on {
  color: #3db4ff;
  border-bottom-color: #3db4ff;
}
