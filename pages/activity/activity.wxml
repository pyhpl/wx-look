<!-- navbar  -->
<view class='navbar'>
  <view class='navbar-search'>
    <text class='navbar-search-text iconfont icon-search'></text>
  </view>
  <view class='navbar-tags'>
    <scroll-view scroll-x="true">
      <text data-id="{{tag.id}}" wx:key="id"
        wx:for="{{tags}}" wx:for-item="tag" catchtap="navbarTagTaped"
        class="navbar-tag {{tag.id === currentId ? 'navbar-tag-selcted' : ''}}" >{{tag.name}}</text>
    </scroll-view>
  </view> 
  <view class='navbar-tag-add'>
    <text class='navbar-search-text iconfont icon-add'></text>
  </view>
</view>
<!-- activity  -->
