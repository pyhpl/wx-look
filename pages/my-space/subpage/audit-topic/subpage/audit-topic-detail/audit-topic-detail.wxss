  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #eeeef5;
  width: 180rpx;
  height: 180rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.topic-pull-image {
  width: 180rpx;
  height: 180rpx;
}

.topic-title-container {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.topic-description-container {
  margin-top: 52rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  width: 100%;
}

.topic-title {
  font-size: 34rpx;
}

.topic-description {
  font-size: 30rpx;
}

